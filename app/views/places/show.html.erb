<h1><%= @place["name"] %></h1>

<% if session["user_id"]!= nil  %>

<h2>My Entries</h2>
<div class = "row">
    <% for entry in @entries %>
      <div class = "col-12 col-md-6 col-lg-4 mb-4">
      <div class="grid gap-3">
      <h3><%= entry["title"] %></h3>
      <h4><%= entry["occurred_on"] %></h4>
      <% if entry.uploaded_image.attached? %>
        <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid">
        <p><%= entry["description"] %></p>
      <% else %>
        <p><%= entry["description"] %></p>  
      <% end %>
      </div>
      </div>
    <% end %>

<% else %>
Please <a href="/login" class = "btn btn-info">login</a> to see your entries.
<% end %>
</div>
<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>" class = "btn btn-info ms-3">New Entry</a>
</p>
</div>
<p class = "ms-3">
  <a href="/places">Back to All Places</a>
</p>